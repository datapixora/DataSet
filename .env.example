# App Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database (Use Render PostgreSQL or Supabase connection string)
DATABASE_URL=postgresql://user:password@localhost:5432/visual_data_platform

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Cloudflare R2 Storage (or AWS S3 compatible)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=visual-data-platform
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com

# AWS S3 (Alternative to R2)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=

# CORS (Allow your mobile app domain)
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Limits
MAX_FILE_SIZE_MB=50
MAX_UPLOADS_PER_DAY_NEW_USER=50
MAX_UPLOADS_PER_DAY_VERIFIED=200

# Minimum Image Requirements
MIN_IMAGE_WIDTH=1920
MIN_IMAGE_HEIGHT=1080

# Default Payouts
DEFAULT_BASE_PAYOUT=0.50
DEFAULT_BONUS_PAYOUT=0.25
